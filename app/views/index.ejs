<%- include('partials/header') %>

<div class="pokemons-list">

    <% for (const pokemon of pokemons) { %>

        <article class="home-article">
            <figure>
                <a href="/pokemon/<%= pokemon.numero %>">
                    <img src="/img/<%= pokemon.numero %>.png" alt="Image de <%= pokemon.nom %>">
                </a>
                <figcaption>
                    <a href="/pokemon/<%= pokemon.numero %>">#<%= pokemon.numero %> <%= pokemon.nom %></a>
                </figcaption>
            </figure>
        </article>
    
    
    <% } %>

</div>


<%- include('partials/footer') %>